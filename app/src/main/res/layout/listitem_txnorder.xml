<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/invite_item_bg"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageViewBankIcon"
            android:layout_width="46.67dp"
            android:layout_height="46.67dp"
            android:layout_margin="10dp"
            android:src="@mipmap/bankcard_icon_default" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textViewBankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="招商银行"
                    android:textColor="#333"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textViewCardNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(1540)"
                    android:textColor="#666"
                    android:textSize="12dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewCardType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="信用卡"

                android:textColor="#333"
                android:textSize="12dp" />


        </LinearLayout>


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingTop="20dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--符号-->
                <TextView
                    android:id="@+id/textViewOrderAmtSimple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="￥"
                    android:textColor="#333"
                    android:textSize="18sp" />
                <!--金额-->
                <TextView
                    android:id="@+id/textViewOrderAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3999"
                    android:textColor="#c8152d"
                    android:textSize="18sp" />


            </LinearLayout>
            <!--交易类型-->
            <TextView
                android:id="@+id/textViewOrderType"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bankcard_state_bg"
                android:gravity="center"
                android:text="自动扣款"
                android:textColor="#999"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>