<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageViewBankIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/bankcard_icon_default" />


        <TextView
            android:id="@+id/textViewBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
             android:text="招商银行"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewBankCardNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
             android:text="1540"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewBankCardType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="信用卡"
            android:textColor="#999"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageViewBankSelectFlag"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_marginRight="20dp"
            android:src="@mipmap/bank_select_flag_sel" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:background="#ededed" />


</LinearLayout>