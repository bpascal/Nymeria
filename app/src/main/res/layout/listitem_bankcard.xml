<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewCardBg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/bankcard_bg_01" />

    <ImageView
        android:id="@+id/imageViewBankIcon"
        android:layout_width="46.67dp"
        android:layout_height="46.67dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/bankcard_icon_default" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="80dp"
        android:paddingTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textViewBankName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="招商银行"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textViewCardType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="信用卡"
            android:textColor="@color/white"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/textViewCardNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="**** **** **** 1540"
            android:textColor="@color/white"
            android:textSize="22dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textViewCardState"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bankcard_state_bg"
        android:gravity="center"
        android:text="未设置"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>